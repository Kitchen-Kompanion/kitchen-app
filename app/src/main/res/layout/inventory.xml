<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InventoryFragment">

    <!-- Search Bar -->
    <EditText
        android:id="@+id/search_inventory"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="20dp"
        android:hint="Search inventory..."
        android:padding="8dp"
        android:drawableStart="@android:drawable/ic_menu_search"/>

    <!-- Scrollable Inventory List -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_inventory"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Dairy Category -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Expiring Soon"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingTop="8dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal">

                <LinearLayout
                    android:id="@+id/expire_section"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                </LinearLayout>
            </HorizontalScrollView>

            <!-- Fruits & Vegetables Category -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fruits"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingTop="8dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fruit_section"
                    android:orientation="horizontal">


                </LinearLayout>
            </HorizontalScrollView>

            <!-- Pantry Items -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pantry Items"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingTop="8dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pantry_section"
                    android:orientation="horizontal">


                </LinearLayout>
            </HorizontalScrollView>

            <!-- Frozen Items -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Frozen Items"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingTop="8dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/frozen_section"
                    android:orientation="horizontal">

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Beverages -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Beverages"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingTop="8dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/beverages_section"
                    android:orientation="horizontal">

                </LinearLayout>
            </HorizontalScrollView>
            <!-- Dairy -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dairy"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingTop="8dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dairy_section"
                    android:orientation="horizontal">
                    <!--<include layout="@layout/inventory_item"/> -->

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Snacks -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Snacks"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingTop="8dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/snacks_section"
                    android:orientation="horizontal">

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_item_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        app:srcCompat="@android:drawable/ic_input_add"
        android:contentDescription="Add Item"
        app:tint="@android:color/white"
        app:fabCustomSize="56dp"
        android:backgroundTint="#4CAF50" />

</RelativeLayout>